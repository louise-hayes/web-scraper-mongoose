<!-- Modal Trigger to view all articles-->

<div class="row">
    <div class="col s12">
        <h1>All Articles Scraped
            {{!-- <a style='margin-left: 40px;' href="#newEvent" class="btn-floating btn-large waves-effect modal-trigger add-event-btn">
                <i class="material-icons add-event-btn">add</i>
            </a> --}}
        </h1>
    </div>
</div>
<div class="row">
    <div class="col s10 offset-s1">
        <table class="table highlight responsive-table" id="articles-table">
            <thead>
                <tr>
                    <th scope="col">Article Title</th>
                    {{!-- <th scope="col">Summary</th> --}}
                    <th scope="col">URL</th>
                    <th scope="col" colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                {{#each articles}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{link}}</td>
                    <td>{{id}}</td>
                    {{!-- Show save button for each article which when cicked will show the single article view modal --}}
                    <td>
                        <a id="events-eye-icon"class="see-article" data-id="{{id}}">
                            <i class="link large material-icons see-article" style="font-size:36px">backup</i>
                        </a>
                        {{!-- <a class="event-signup" data-id="{{id}}">
                            <i class="link large material-icons signup-event" style="font-size:36px">group_add</i>
                        </a> --}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<!-- This is for the create  modal -->
